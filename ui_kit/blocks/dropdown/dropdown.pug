mixin dropdown(options)

  - var dropdownClass = "dropdown"

  if options.dropdownStyle
    - dropdownClass += " dropdown_style_" + options.dropdownStyle
  
  div.dropdown-look
    span.dropdown-name= options.dropdownName
    span.dropdown-arrow
      include ./expand_more.svg

    ul(class=dropdownClass)
      include ./dropdown-li/dropdown-li.pug
      +dropdown-li({dropdownItemName: 'Service-1'})
      +dropdown-li({dropdownItemName: 'Service-2'})
      +dropdown-li({dropdownItemName: 'Service-3'})

      
